// Mental-Base Prisma Schema
// Next.js 15 + Auth.js v5 + Supabase PostgreSQL

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// ============================================================================
// 認証関連モデル
// ============================================================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String
  password      String    // bcryptハッシュ化済み
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // フェーズ2: メンター機能拡張
  role       String   @default("client") // 'client' | 'mentor' | 'admin'
  isMentor   Boolean  @default(false)
  bio        String?  @db.Text
  expertise  String[] @default([])

  // リレーション（フェーズ1）
  sessions            Session[]
  passwordResetTokens PasswordResetToken[]
  goals               Goal[]
  tasks               Task[]
  logs                Log[]
  reflections         Reflection[]
  aiAnalysisReports   AIAnalysisReport[]
  actionPlans         ActionPlan[]
  chatMessages        ChatMessage[]
  userSettings        UserSettings?
  notifications       Notification[]

  // リレーション（フェーズ2: メンター機能）
  mentorRelationshipsAsMentor  MentorClientRelationship[] @relation("MentorRelations")
  mentorRelationshipsAsClient  MentorClientRelationship[] @relation("ClientRelations")
  clientViewLogs               ClientDataViewLog[]        @relation("MentorViews")
  accessPermissionsGiven       ClientDataAccessPermission[] @relation("ClientPermissions")
  mentorNotes                  MentorNote[]               @relation("MentorCreatedNotes")
  clientProgressReportsAsClient ClientProgressReport[]    @relation("ClientReports")
  clientProgressReportsAsMentor ClientProgressReport[]    @relation("MentorReports")

  @@map("users")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("password_reset_tokens")
}

model UserSettings {
  id                 String   @id @default(uuid())
  userId             String   @unique
  emailNotifications Boolean  @default(true)
  reminderTime       String?  // HH:mm形式
  theme              String   @default("professional") // 'professional' | 'warm' | 'modern' | 'calm'
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

// ============================================================================
// 目標・タスク・ログ関連モデル
// ============================================================================

model Goal {
  id          String   @id @default(uuid())
  userId      String
  title       String   @db.VarChar(200)
  description String?  @db.Text
  deadline    DateTime?
  status      String   @default("active") // 'active' | 'completed' | 'archived'
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]

  @@index([userId])
  @@index([status])
  @@map("goals")
}

model Task {
  id            String    @id @default(uuid())
  userId        String
  goalId        String?
  title         String    @db.VarChar(200)
  description   String?   @db.Text
  dueDate       DateTime?
  scheduledTime String?   // HH:mm形式
  priority      String    @default("medium") // 'high' | 'medium' | 'low'
  status        String    @default("pending") // 'pending' | 'in_progress' | 'completed'
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal          Goal?     @relation(fields: [goalId], references: [id], onDelete: Cascade)
  logs          Log[]

  @@index([userId])
  @@index([goalId])
  @@index([dueDate])
  @@index([status])
  @@map("tasks")
}

model Log {
  id        String   @id @default(uuid())
  userId    String
  taskId    String?
  content   String   @db.Text
  emotion   String?  // 'happy' | 'neutral' | 'sad' | 'anxious' | 'excited' | 'tired'
  state     String?  // 'energetic' | 'tired' | 'focused' | 'distracted' | 'calm' | 'stressed'
  type      String   @default("daily") // 'daily' | 'reflection' | 'insight'
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([taskId])
  @@index([createdAt])
  @@map("logs")
}

// ============================================================================
// 振り返り・AI分析・アクション関連モデル
// ============================================================================

model Reflection {
  id               String             @id @default(uuid())
  userId           String
  period           String             // 'daily' | 'weekly' | 'monthly'
  startDate        DateTime
  endDate          DateTime
  content          String             @db.Text
  achievements     String?            @db.Text
  challenges       String?            @db.Text
  createdAt        DateTime           @default(now())
  user             User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  aiAnalysisReport AIAnalysisReport[]

  @@index([userId])
  @@index([createdAt])
  @@map("reflections")
}

model AIAnalysisReport {
  id              String       @id @default(uuid())
  userId          String
  reflectionId    String?
  analysisType    String       // 'progress' | 'pattern' | 'recommendation'
  insights        Json         // AIInsight[]の配列
  recommendations Json         // AIRecommendation[]の配列
  summary         String?      @db.Text
  confidence      Float        // 0-1
  createdAt       DateTime     @default(now())
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  reflection      Reflection?  @relation(fields: [reflectionId], references: [id], onDelete: SetNull)
  actionPlans     ActionPlan[]

  @@index([userId])
  @@index([reflectionId])
  @@index([createdAt])
  @@map("ai_analysis_reports")
}

model ActionPlan {
  id          String            @id @default(uuid())
  userId      String
  reportId    String?
  title       String            @db.VarChar(200)
  description String            @db.Text
  actionItems Json              // ActionItem[]の配列
  status      String            @default("planned") // 'planned' | 'in_progress' | 'completed'
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  report      AIAnalysisReport? @relation(fields: [reportId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([reportId])
  @@index([status])
  @@map("action_plans")
}

// ============================================================================
// AIアシスタント関連モデル
// ============================================================================

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  role      String   // 'user' | 'assistant'
  content   String   @db.Text
  mode      String   // 'problem_solving' | 'learning_support' | 'planning' | 'mentoring'
  context   Json?    // オプション: コンテキスト情報
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([mode])
  @@index([createdAt])
  @@map("chat_messages")
}

// ============================================================================
// 通知関連モデル
// ============================================================================

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String   // 'reminder' | 'achievement' | 'suggestion'
  title     String   @db.VarChar(200)
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}

// ============================================================================
// フェーズ2: メンター機能関連モデル
// ============================================================================

// メンター-クライアント関係
model MentorClientRelationship {
  id               String    @id @default(uuid())
  mentorId         String
  clientId         String
  status           String    @default("pending") // 'pending' | 'active' | 'terminated'
  invitedBy        String    // メンターまたはクライアントのID
  invitedAt        DateTime  @default(now())
  acceptedAt       DateTime?
  terminatedAt     DateTime?
  terminationReason String?  @db.Text
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // リレーション
  mentor            User                        @relation("MentorRelations", fields: [mentorId], references: [id], onDelete: Cascade)
  client            User                        @relation("ClientRelations", fields: [clientId], references: [id], onDelete: Cascade)
  accessPermissions ClientDataAccessPermission[]

  @@unique([mentorId, clientId])
  @@index([mentorId])
  @@index([clientId])
  @@index([status])
  @@map("mentor_client_relationships")
}

// データアクセス権限
model ClientDataAccessPermission {
  id              String   @id @default(uuid())
  relationshipId  String
  clientId        String
  allowGoals      Boolean  @default(false)
  allowTasks      Boolean  @default(false)
  allowLogs       Boolean  @default(false)
  allowReflections Boolean @default(false)
  allowAiReports  Boolean  @default(false)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // リレーション
  relationship MentorClientRelationship @relation(fields: [relationshipId], references: [id], onDelete: Cascade)
  client       User                     @relation("ClientPermissions", fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([relationshipId])
  @@index([clientId])
  @@index([isActive])
  @@map("client_data_access_permissions")
}

// データ閲覧監査ログ
model ClientDataViewLog {
  id        String   @id @default(uuid())
  mentorId  String
  clientId  String
  dataType  String   // 'goal' | 'task' | 'log' | 'reflection' | 'ai_report'
  dataId    String   // 閲覧したデータのID
  action    String   // 'view' | 'export'
  createdAt DateTime @default(now())

  // リレーション
  mentor User @relation("MentorViews", fields: [mentorId], references: [id], onDelete: Cascade)

  @@index([mentorId])
  @@index([clientId])
  @@index([dataType])
  @@index([createdAt])
  @@map("client_data_view_logs")
}

// メンターノート
model MentorNote {
  id             String   @id @default(uuid())
  mentorId       String
  clientId       String
  title          String   @db.VarChar(200)
  content        String   @db.Text
  noteType       String   @default("general") // 'general' | 'observation' | 'concern' | 'achievement'
  isPrivate      Boolean  @default(true) // true: メンターのみ閲覧可能、false: クライアントと共有
  tags           String[] @default([])
  linkedDataType String?  // 'goal' | 'task' | 'log' | 'reflection'
  linkedDataId   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // リレーション
  mentor User @relation("MentorCreatedNotes", fields: [mentorId], references: [id], onDelete: Cascade)

  @@index([mentorId])
  @@index([clientId])
  @@index([noteType])
  @@index([createdAt])
  @@map("mentor_notes")
}

// クライアント進捗レポート
model ClientProgressReport {
  id               String   @id @default(uuid())
  clientId         String
  mentorId         String
  reportPeriod     String   // 'weekly' | 'monthly'
  startDate        DateTime
  endDate          DateTime
  overallProgress  Float    // 0-100
  completedGoals   Int      @default(0)
  completedTasks   Int      @default(0)
  logCount         Int      @default(0)
  reflectionCount  Int      @default(0)
  mentorComments   String?  @db.Text
  mentorRating     Int?     // 1-5段階評価
  areasOfImprovement String[] @default([])
  strengths        String[] @default([])
  nextSteps        String?  @db.Text
  followUpDate     DateTime?
  isSharedWithClient Boolean @default(false)
  sharedAt         DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // リレーション
  client User @relation("ClientReports", fields: [clientId], references: [id], onDelete: Cascade)
  mentor User @relation("MentorReports", fields: [mentorId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([mentorId])
  @@index([reportPeriod])
  @@index([createdAt])
  @@map("client_progress_reports")
}
